{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": ["airbnb-base"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": "off",
        "no-underscore-dangle": ["error", { "allow": ["_id"] }],
        "eqeqeq": 1,
        "max-len": 0,
        "global-require": 0
    }
}
